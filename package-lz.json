{
  "name": "gmx-contracts-lz",
  "version": "1.0.0",
  "description": "LayerZero V2 compatible package.json",
  "scripts": {
    "compile": "hardhat compile --config hardhat.config.layerzero.js",
    "lz:wire": "hardhat lz:oapp:wire --oapp-config layerzero.config.ts --config hardhat.config.layerzero.js",
    "lz:peers:get": "hardhat lz:oapp:peers:get --oapp-config layerzero.config.ts --config hardhat.config.layerzero.js",
    "lz:opts:get": "hardhat lz:oapp:enforced-opts:get --oapp-config layerzero.config.ts --config hardhat.config.layerzero.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.9",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@layerzerolabs/lz-definitions": "^3.0.108",
    "@layerzerolabs/lz-v2-utilities": "^3.0.108",
    "@layerzerolabs/metadata-tools": "^2.0.0",
    "@layerzerolabs/oft-evm": "^3.1.4",
    "@layerzerolabs/toolbox-hardhat": "^0.6.11",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "ethers": "^6.14.0",
    "hardhat": "^2.22.0",
    "hardhat-contract-sizer": "^2.10.0",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0"
  }
}